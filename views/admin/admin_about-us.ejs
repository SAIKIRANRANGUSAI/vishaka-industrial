<%- include('../layouts/admin_layouts_header', { title: 'Admin | About Us', currentPage: 'about-us' }) %>
<%- include('../layouts/admin_layouts_sidebar', { currentPage: 'about-us' }) %>

<div class="container-fluid px-4 py-4">
    <!-- Premium Header -->
    <div class="premium-header mb-5">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 fw-bold text-gradient mb-2">About Us Management</h1>
                <p class="text-muted mb-0">Craft your company's story with compelling content and visuals</p>
            </div>
            <div class="premium-icon">
                <i class="fas fa-building"></i>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    <% if (successMessage) { %>
        <div class="alert-premium-success alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3"></i>
                <div class="fw-medium"><%= successMessage %></div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Main About Us Content (Table 1) -->
    <form action="/admin/about-us" method="POST" enctype="multipart/form-data">
        <!-- Content Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Main Content Section</h4>
                        <p class="mb-0 text-muted">Tell your company's story with engaging content</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <!-- Heading -->
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-heading me-2"></i>
                        Main Heading
                    </label>
                    <textarea id="heading" name="heading" class="premium-input" rows="2" 
                              placeholder="Enter a compelling heading that represents your company..."><%= about.heading || '' %></textarea>
                    <div class="form-text">
                        <i class="fas fa-lightbulb me-1"></i>
                        Keep it concise and impactful (max 120 characters)
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group-premium">
                    <label class="form-label-premium">
                        <i class="fas fa-align-left me-2"></i>
                        Detailed Description
                    </label>
                    <textarea id="description" name="description" class="premium-textarea" 
                              placeholder="Describe your company's mission, values, and story..."><%= about.description || '' %></textarea>
                    <div class="form-text">
                        <i class="fas fa-info-circle me-1"></i>
                        Use the rich text editor for advanced formatting
                    </div>
                </div>
            </div>
        </div>

        <!-- Images Section -->
        <div class="premium-card mb-5">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-images"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Visual Assets</h4>
                        <p class="mb-0 text-muted">Upload high-quality images that represent your brand</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="row g-4">
                    <% ['image1','image2'].forEach((imgKey, i) => { %>
                        <div class="col-xl-6 col-lg-12">
                            <div class="image-upload-card">
                                <div class="image-card-header">
                                    <h6 class="mb-0 fw-bold">
                                        <i class="fas fa-image me-2 text-primary"></i>
                                        Image <%= i+1 %>
                                    </h6>
                                    <span class="badge-premium">Recommended: 800Ã—600px</span>
                                </div>
                                
                                <div class="image-preview-container">
                                    <% const imgUrl = about[imgKey + '_url']; %>
                                    <% if (imgUrl) { %>
                                        <div class="premium-image-wrapper">
                                            <img src="<%= imgUrl %>" 
                                                 class="premium-image-preview" 
                                                 alt="About Us Image <%= i+1 %>"
                                                 onclick="previewImage('<%= imgUrl %>')">
                                            <div class="image-overlay">
                                                <button type="button" class="btn-premium-icon" onclick="previewImage('<%= imgUrl %>')">
                                                    <i class="fas fa-expand"></i>
                                                </button>
                                                <span class="status-badge">Active</span>
                                            </div>
                                            <input type="hidden" name="existing_<%= imgKey %>" value="<%= imgUrl %>">
                                        </div>
                                    <% } else { %>
                                        <div class="empty-image-state">
                                            <div class="empty-icon">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                            <p class="empty-text">No Image Uploaded</p>
                                            <small class="empty-subtext">Click below to upload an image</small>
                                        </div>
                                    <% } %>
                                </div>

                                <div class="upload-section">
                                    <div class="file-input-wrapper">
                                        <input type="file" name="<%= imgKey %>" id="file-<%= imgKey %>" 
                                               class="premium-file-input" accept="image/*">
                                        <label for="file-<%= imgKey %>" class="file-input-label">
                                            <i class="fas fa-upload me-2"></i>
                                            <%= imgUrl ? 'Change Image' : 'Upload Image' %>
                                        </label>
                                    </div>
                                    <div class="file-help-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Supports JPG, PNG, WebP (Max 10MB)
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Submit Section for Table 1 -->
        <div class="premium-submit-section mb-5">
            <div class="submit-card">
                <div class="submit-content">
                    <i class="fas fa-save submit-icon"></i>
                    <div>
                        <h5 class="mb-1">Update Main Content</h5>
                        <p class="mb-0">Save changes to the main About Us section</p>
                    </div>
                </div>
                <button type="submit" class="btn-premium">
                    <i class="fas fa-save me-2"></i>
                    Update Main Content
                </button>
            </div>
        </div>
    </form>

    <!-- About Page Details (Table 2) -->
    <form action="/admin/about-us/update" method="POST" enctype="multipart/form-data">
        <!-- Stats Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Company Statistics</h4>
                        <p class="mb-0 text-muted">Showcase your achievements and milestones</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="row g-4">
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-input-group">
                            <label class="form-label-premium">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Years Experience
                            </label>
                            <input type="number" name="years_experience" class="premium-input" 
                                   value="<%= abouts.years_experience || 0 %>" min="0">
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-input-group">
                            <label class="form-label-premium">
                                <i class="fas fa-users me-2"></i>
                                Employees
                            </label>
                            <input type="number" name="employees" class="premium-input" 
                                   value="<%= abouts.employees || 0 %>" min="0">
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-input-group">
                            <label class="form-label-premium">
                                <i class="fas fa-project-diagram me-2"></i>
                                Projects Completed
                            </label>
                            <input type="number" name="projects_completed" class="premium-input" 
                                   value="<%= abouts.projects_completed || 0 %>" min="0">
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="stat-input-group">
                            <label class="form-label-premium">
                                <i class="fas fa-smile me-2"></i>
                                Happy Clients
                            </label>
                            <input type="number" name="happy_clients" class="premium-input" 
                                   value="<%= abouts.happy_clients || 0 %>" min="0">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vision Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Our Vision</h4>
                        <p class="mb-0 text-muted">Share your company's vision for the future</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-heading me-2"></i>
                        Vision Heading
                    </label>
                    <input type="text" name="vision_heading" class="premium-input" 
                           value="<%= abouts.vision_heading || '' %>" 
                           placeholder="Enter your vision heading...">
                </div>
                <div class="form-group-premium">
                    <label class="form-label-premium">
                        <i class="fas fa-align-left me-2"></i>
                        Vision Description
                    </label>
                    <textarea name="vision_description" class="premium-textarea" 
                              placeholder="Describe your company's vision..."><%= abouts.vision_description || '' %></textarea>
                </div>
            </div>
        </div>

        <!-- Mission Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Our Mission</h4>
                        <p class="mb-0 text-muted">Define your company's mission and purpose</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-heading me-2"></i>
                        Mission Heading
                    </label>
                    <input type="text" name="mission_heading" class="premium-input" 
                           value="<%= abouts.mission_heading || '' %>" 
                           placeholder="Enter your mission heading...">
                </div>
                <div class="form-group-premium">
                    <label class="form-label-premium">
                        <i class="fas fa-align-left me-2"></i>
                        Mission Description
                    </label>
                    <textarea name="mission_description" class="premium-textarea" 
                              placeholder="Describe your company's mission..."><%= abouts.mission_description || '' %></textarea>
                </div>
            </div>
        </div>

        <!-- Goal Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-flag"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Our Goals</h4>
                        <p class="mb-0 text-muted">Outline your company's primary goals</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-heading me-2"></i>
                        Goal Heading
                    </label>
                    <input type="text" name="goal_heading" class="premium-input" 
                           value="<%= abouts.goal_heading || '' %>" 
                           placeholder="Enter your goal heading...">
                </div>
                <div class="form-group-premium">
                    <label class="form-label-premium">
                        <i class="fas fa-align-left me-2"></i>
                        Goal Description
                    </label>
                    <textarea name="goal_description" class="premium-textarea" 
                              placeholder="Describe your company's goals..."><%= abouts.goal_description || '' %></textarea>
                </div>
            </div>
        </div>

        <!-- Why Choose Us Section -->
        <div class="premium-card mb-4">
            <div class="premium-card-header">
                <div class="d-flex align-items-center">
                    <div class="premium-icon-small me-3">
                        <i class="fas fa-star"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Why Choose Us</h4>
                        <p class="mb-0 text-muted">Highlight what makes your company unique</p>
                    </div>
                </div>
            </div>
            <div class="premium-card-body">
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-heading me-2"></i>
                        Choose Us Heading
                    </label>
                    <input type="text" name="choose_heading" class="premium-input" 
                           value="<%= abouts.choose_heading || '' %>" 
                           placeholder="Enter why choose us heading...">
                </div>
                <div class="form-group-premium mb-4">
                    <label class="form-label-premium">
                        <i class="fas fa-align-left me-2"></i>
                        Choose Us Description
                    </label>
                    <textarea id="description2" name="choose_description" class="premium-textarea" 
                              placeholder="Describe why clients should choose you..."><%= abouts.choose_description || '' %></textarea>
                </div>

                <!-- Choose Us Images -->
                <div class="row g-4">
                    <% ['choose_image1_url','choose_image2_url','choose_image3_url'].forEach((imgKey, i) => { %>
                        <div class="col-xl-4 col-md-6">
                            <div class="image-upload-card">
                                <div class="image-card-header">
                                    <h6 class="mb-0 fw-bold">
                                        <i class="fas fa-image me-2 text-primary"></i>
                                        Feature Image <%= i+1 %>
                                    </h6>
                                </div>
                                
                                <div class="image-preview-container">
                                    <% const chooseImgUrl = abouts[imgKey]; %>
                                    <% if (chooseImgUrl) { %>
                                        <div class="premium-image-wrapper">
                                            <img src="<%= chooseImgUrl %>" 
                                                 class="premium-image-preview" 
                                                 alt="Feature Image <%= i+1 %>"
                                                 onclick="previewImage('<%= chooseImgUrl %>')">
                                            <div class="image-overlay">
                                                <button type="button" class="btn-premium-icon" onclick="previewImage('<%= chooseImgUrl %>')">
                                                    <i class="fas fa-expand"></i>
                                                </button>
                                                <span class="status-badge">Active</span>
                                            </div>
                                            <input type="hidden" name="existing_<%= imgKey %>" value="<%= chooseImgUrl %>">
                                        </div>
                                    <% } else { %>
                                        <div class="empty-image-state">
                                            <div class="empty-icon">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                            <p class="empty-text">No Image Uploaded</p>
                                            <small class="empty-subtext">Upload feature image</small>
                                        </div>
                                    <% } %>
                                </div>

                                <div class="upload-section">
                                    <div class="file-input-wrapper">
                                        <input type="file" name="<%= imgKey %>" id="file-<%= imgKey %>" 
                                               class="premium-file-input" accept="image/*">
                                        <label for="file-<%= imgKey %>" class="file-input-label">
                                            <i class="fas fa-upload me-2"></i>
                                            <%= chooseImgUrl ? 'Change Image' : 'Upload Image' %>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Submit Section for Table 2 -->
        <div class="premium-submit-section">
            <div class="submit-card">
                <div class="submit-content">
                    <i class="fas fa-chart-bar submit-icon"></i>
                    <div>
                        <h5 class="mb-1">Update Details & Statistics</h5>
                        <p class="mb-0">Save changes to company details and statistics</p>
                    </div>
                </div>
                <button type="submit" class="btn-premium">
                    <i class="fas fa-save me-2"></i>
                    Update Details
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Image Preview Modal -->
