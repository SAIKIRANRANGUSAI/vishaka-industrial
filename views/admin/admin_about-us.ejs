<script>
    // Initialize TinyMCE for all textareas
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize main description editor
        tinymce.init({
            selector: '#description, #description2',
            plugins: 'anchor autolink charmap codesample emoticons link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist | emoticons charmap | removeformat',
            menubar: false,
            height: 300,
            skin: 'oxide',
            content_css: 'default',
            branding: false
        });

        // Initialize other textarea editors
        const textareas = [
            'vision_description',
            'mission_description', 
            'goal_description',
            'choose_description'
        ];

        textareas.forEach(textareaId => {
            if (document.getElementById(textareaId)) {
                tinymce.init({
                    selector: `#${textareaId}`,
                    plugins: 'lists link',
                    toolbar: 'undo redo | bold italic | bullist numlist | link',
                    menubar: false,
                    height: 200,
                    skin: 'oxide',
                    branding: false
                });
            }
        });
    });

    // Image preview function
    function previewImage(src) {
        document.getElementById('previewImage').src = src;
        const previewModal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
        previewModal.show();
    }

    // File input handlers
    document.addEventListener('DOMContentLoaded', function() {
        // Handle file input changes for both forms
        document.querySelectorAll('.premium-file-input').forEach(input => {
            input.addEventListener('change', function(e) {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
                    label.style.borderColor = '#48bb78';
                    label.style.background = '#f0fff4';
                    
                    // Preview image
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const previewContainer = this.closest('.image-upload-card').querySelector('.image-preview-container');
                        previewContainer.innerHTML = `
                            <div class="premium-image-wrapper">
                                <img src="${e.target.result}" class="premium-image-preview" alt="Preview">
                                <div class="image-overlay">
                                    <button type="button" class="btn-premium-icon" onclick="previewImage('${e.target.result}')">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                    <span class="status-badge">New Upload</span>
                                </div>
                            </div>
                        `;
                    }.bind(this);
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });

        // Auto-hide success message
        const successAlert = document.querySelector('.alert-premium-success');
        if (successAlert) {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(successAlert);
                bsAlert.close();
            }, 5000);
        }
    });
</script>


