<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Load TinyMCE -->
<script src="https://cdn.tiny.cloud/1/b0dlmco2b0daotuc268ppv708466zn6px6few9r7pt3v880y/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<style>
    /* Premium Color Scheme */
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        --premium-bg: #f8fafc;
        --premium-border: #e2e8f0;
        --premium-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    /* Premium Header */
    .premium-header {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .premium-icon {
        width: 60px;
        height: 60px;
        background: var(--primary-gradient);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        box-shadow: var(--premium-shadow);
    }

    /* Premium Cards */
    .premium-card {
        background: white;
        border-radius: 20px;
        box-shadow: var(--premium-shadow);
        border: 1px solid var(--premium-border);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .premium-card-header {
        background: var(--premium-bg);
        padding: 2rem;
        border-bottom: 1px solid var(--premium-border);
    }

    .premium-card-body {
        padding: 2rem;
    }

    .premium-icon-small {
        width: 50px;
        height: 50px;
        background: var(--primary-gradient);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    /* Form Styles */
    .form-group-premium {
        margin-bottom: 2rem;
    }

    .stat-input-group {
        margin-bottom: 1rem;
    }

    .form-label-premium {
        display: flex;
        align-items: center;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.8rem;
        font-size: 1.1rem;
    }

    .premium-input {
        width: 100%;
        padding: 1.2rem 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        background: white;
        resize: vertical;
    }

    .premium-input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
        outline: none;
        transform: translateY(-2px);
    }

    .premium-textarea {
        width: 100%;
        min-height: 150px;
        padding: 1.5rem;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 1rem;
        line-height: 1.6;
        transition: all 0.3s ease;
        background: white;
        resize: vertical;
    }

    .form-text {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: #718096;
        display: flex;
        align-items: center;
    }

    /* Image Upload Cards */
    .image-upload-card {
        background: white;
        border: 1px solid var(--premium-border);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

    .image-upload-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--premium-shadow);
    }

    .image-card-header {
        padding: 1.5rem;
        background: var(--premium-bg);
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--premium-border);
    }

    .badge-premium {
        background: var(--primary-gradient);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Image Preview */
    .image-preview-container {
        padding: 1.5rem;
    }

    .premium-image-wrapper {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
    }

    .premium-image-preview {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .premium-image-wrapper:hover .image-overlay {
        opacity: 1;
    }

    .premium-image-wrapper:hover .premium-image-preview {
        transform: scale(1.05);
    }

    .btn-premium-icon {
        width: 45px;
        height: 45px;
        background: white;
        border: none;
        border-radius: 50%;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-premium-icon:hover {
        transform: scale(1.1);
    }

    .status-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--success-gradient);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Empty State */
    .empty-image-state {
        text-align: center;
        padding: 2rem 1rem;
        background: var(--premium-bg);
        border: 2px dashed #cbd5e0;
        border-radius: 12px;
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .empty-icon {
        font-size: 2rem;
        color: #cbd5e0;
        margin-bottom: 0.5rem;
    }

    .empty-text {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }

    .empty-subtext {
        color: #718096;
        font-size: 0.8rem;
    }

    /* Upload Section */
    .upload-section {
        padding: 1.5rem;
        border-top: 1px solid var(--premium-border);
    }

    .file-input-wrapper {
        position: relative;
        margin-bottom: 0.5rem;
    }

    .premium-file-input {
        display: none;
    }

    .file-input-label {
        display: block;
        padding: 0.8rem 1rem;
        background: var(--premium-bg);
