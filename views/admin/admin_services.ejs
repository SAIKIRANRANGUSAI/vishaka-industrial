<style>
    /* Premium Styles */
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        --danger-gradient: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        --premium-bg: #f8fafc;
        --premium-border: #e2e8f0;
        --premium-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    /* Modal Styles */
    .modal {
        backdrop-filter: blur(5px);
    }

    .modal-dialog-centered {
        display: flex;
        align-items: center;
        min-height: calc(100% - 1rem);
    }

    .modal-dialog-scrollable .modal-body {
        max-height: 60vh;
        overflow-y: auto;
    }

    /* Custom scrollbar */
    .modal-body::-webkit-scrollbar {
        width: 6px;
    }

    .modal-body::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .modal-body::-webkit-scrollbar-thumb {
        background: var(--primary-gradient);
        border-radius: 10px;
    }

    /* Alert Styles */
    .alert-premium-success {
        background: var(--success-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 1rem 1.5rem;
    }

    .alert-premium-error {
        background: var(--danger-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        padding: 1rem 1.5rem;
    }

    .premium-header {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .premium-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border: 1px solid var(--premium-border);
        overflow: hidden;
    }

    .premium-card-header {
        background: var(--premium-bg);
        padding: 1.5rem;
        border-bottom: 1px solid var(--premium-border);
    }

    .premium-card-body {
        padding: 1.5rem;
    }

    .premium-icon-small {
        width: 40px;
        height: 40px;
        background: var(--primary-gradient);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    /* Table Styles */
    .premium-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .premium-table th {
        background: var(--primary-gradient);
        color: white;
        font-weight: 600;
        padding: 1rem;
        border: none;
        font-size: 0.9rem;
    }

    .premium-table td {
        padding: 1rem;
        border-bottom: 1px solid var(--premium-border);
        vertical-align: middle;
    }

    .premium-table-row:hover {
        background: rgba(102, 126, 234, 0.04);
        transition: all 0.3s ease;
    }

    /* Modal Styles */
    .premium-modal {
        border-radius: 15px;
        border: none;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
    }

    .premium-modal-header {
        background: var(--primary-gradient);
        color: white;
        border-radius: 15px 15px 0 0;
        padding: 1.5rem;
        border: none;
    }

    .premium-modal-body {
        padding: 1.5rem;
    }

    .premium-modal-footer {
        border-radius: 0 0 15px 15px;
        padding: 1.5rem;
        border-top: 1px solid var(--premium-border);
    }

    /* Buttons */
    .btn-premium {
        background: var(--primary-gradient);
        color: black;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-premium:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary {
        background: #e2e8f0;
        color: #4a5568;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: #cbd5e0;
    }

    .btn-danger {
        background: var(--danger-gradient);
        color: white;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    /* Form Styles */
    .form-group-premium {
        margin-bottom: 1.5rem;
    }

    .form-label-premium {
        display: flex;
        align-items: center;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .premium-input, .premium-textarea {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .premium-input:focus, .premium-textarea:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        outline: none;
    }

    .premium-textarea {
        resize: vertical;
        min-height: 100px;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border: none;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #e6f3ff;
        color: #3182ce;
    }

    .btn-edit:hover {
        background: #3182ce;
        color: white;
    }

    .btn-delete {
        background: #fed7d7;
        color: #e53e3e;
    }

    .btn-delete:hover {
        background: #e53e3e;
        color: white;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .modal-dialog {
            margin: 1rem;
        }
        .premium-modal-body {
            padding: 1rem;
        }
    }
    /* Table Alignment Fixes */
.premium-table th,
.premium-table td {
    vertical-align: middle;
    text-align: center;
    padding: 1rem 0.75rem;
    border-bottom: 1px solid var(--premium-border);
    font-size: 0.95rem;
}

.premium-table td {
    word-break: break-word;
}

.description-tooltip {
    position: relative;
    display: inline-block;
    max-width: 220px;
    text-align: left;
}

.description-preview {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.description-tooltip:hover .tooltip-content {
    display: block;
}

.tooltip-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    z-index: 10;
    width: 300px;
    background: #ffffff;
    color: #2d3748;
    border: 1px solid #e2e8f0;
    padding: 0.75rem;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    font-size: 0.875rem;
}

.image-preview-small {
    position: relative;
    width: 60px;
    height: 60px;
    margin: 0 auto;
    border-radius: 6px;
    overflow: hidden;
    cursor: pointer;
    border: 1px solid #e2e8f0;
    transition: transform 0.2s, box-shadow 0.2s;
}

.image-preview-small img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.image-overlay-small {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(102, 126, 234, 0.4);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
}

.image-preview-small:hover .image-overlay-small {
    opacity: 1;
}

.action-buttons {
