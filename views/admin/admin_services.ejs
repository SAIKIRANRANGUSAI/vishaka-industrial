}

/* Slug & Date Badges */
.slug-badge {
    display: inline-block;
    background: #edf2ff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #3c366b;
}

.date-badge {
    display: inline-block;
    background: #f0f4f8;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #4a5568;
}

/* No image badge */
.no-image-badge {
    display: inline-block;
    font-size: 0.85rem;
    color: #a0aec0;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .description-tooltip {
        max-width: 150px;
    }
    .tooltip-content {
        width: 200px;
    }
    .image-preview-small {
        width: 50px;
        height: 50px;
    }
}

</style>

<script>
    // Services data
    const servicesData = {
        <% if (typeof services !== 'undefined') { %>
            <% services.forEach(service => { %>
                <%= service.id %>: {
                    title: `<%= service.title.replace(/'/g, "\\'") %>`,
                    slug: `<%= service.slug.replace(/'/g, "\\'") %>`,
                    description: `<%= service.description ? service.description.replace(/'/g, "\\'") : '' %>`,
                    image: "<%= service.image_url || '' %>"
                },
            <% }) %>
        <% } %>
    };

    // Simple modal functions
    function openAddModal() {
        console.log('Opening add modal');
        const modal = new bootstrap.Modal(document.getElementById('addServiceModal'));
        modal.show();
    }

    function openEditModal(id) {
        console.log('Opening edit modal for:', id);
        const service = servicesData[id];
        if (!service) {
            alert('Service not found!');
            return;
        }

        // Fill form data
        document.getElementById('edit_id').value = id;
        document.getElementById('edit_title').value = service.title;
        document.getElementById('edit_slug').value = service.slug;
        document.getElementById('edit_description').value = service.description;
        document.getElementById('editForm').action = `/admin/services/${id}/edit`;

        // Show current image
        const previewContainer = document.getElementById('currentImagePreview');
        previewContainer.innerHTML = '';
        if (service.image) {
            previewContainer.innerHTML = `
                <div class="text-center">
                    <p class="small text-muted mb-2">Current Image:</p>
                    <img src="${service.image}" alt="Current Image" 
                         style="max-width: 200px; border-radius: 8px; cursor: pointer;"
                         onclick="previewImage('${service.image}')">
                </div>
            `;
        }

        const modal = new bootstrap.Modal(document.getElementById('editServiceModal'));
        modal.show();
    }

    function confirmDelete(id, title) {
        document.getElementById('deleteServiceName').textContent = title;
        document.getElementById('deleteForm').action = `/admin/services/${id}/delete`;
        const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
        modal.show();
    }

    function previewImage(src) {
        document.getElementById('previewImage').src = src;
        const modal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
        modal.show();
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Page loaded successfully');
        
        // File input handlers
        const addImageInput = document.getElementById('addImage');
        if (addImageInput) {
            addImageInput.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
                    label.style.background = '#f0fff4';
                }
            });
        }

        const editImageInput = document.getElementById('editImage');
        if (editImageInput) {
            editImageInput.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
                    label.style.background = '#f0fff4';
                }
            });
        }

        // Auto-close alerts
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            }, 5000);
        });
    });
</script>

