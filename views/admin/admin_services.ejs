<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    /* Premium Styles */
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        --danger-gradient: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        --premium-bg: #f8fafc;
        --premium-border: #e2e8f0;
        --premium-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    /* Modal Centering */
    .modal-dialog-centered {
        display: flex;
        align-items: center;
        min-height: calc(100% - 1rem);
    }

    /* Alert Styles */
    .alert-premium-success {
        background: var(--success-gradient);
        color: white;
        border: none;
        border-radius: 15px;
        padding: 1rem 1.5rem;
    }

    .alert-premium-error {
        background: var(--danger-gradient);
        color: white;
        border: none;
        border-radius: 15px;
        padding: 1rem 1.5rem;
    }

    .premium-header {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .premium-card {
        background: white;
        border-radius: 20px;
        box-shadow: var(--premium-shadow);
        border: 1px solid var(--premium-border);
        overflow: hidden;
    }

    .premium-card-header {
        background: var(--premium-bg);
        padding: 2rem;
        border-bottom: 1px solid var(--premium-border);
    }

    .premium-card-body {
        padding: 2rem;
    }

    .premium-icon-small {
        width: 50px;
        height: 50px;
        background: var(--primary-gradient);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    /* Premium Table Styles */
    .premium-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .premium-table th {
        background: var(--primary-gradient);
        color: white;
        font-weight: 600;
        padding: 1.2rem 1rem;
        border: none;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .premium-table td {
        padding: 1.2rem 1rem;
        border-bottom: 1px solid var(--premium-border);
        vertical-align: middle;
    }

    .premium-table-row:hover {
        background: rgba(102, 126, 234, 0.04);
        transform: translateX(5px);
        transition: all 0.3s ease;
    }

    /* Description Tooltip */
    .description-tooltip {
        position: relative;
        cursor: pointer;
        max-width: 300px;
    }

    .description-preview {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #666;
        font-size: 0.9rem;
    }

    .tooltip-content {
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: #2d3748;
        color: white;
        padding: 1rem;
        border-radius: 8px;
        width: 300px;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        font-size: 0.85rem;
        line-height: 1.4;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .description-tooltip:hover .tooltip-content {
        opacity: 1;
        visibility: visible;
        bottom: calc(100% + 10px);
    }

    /* Image Preview */
    .image-preview-small {
        position: relative;
        width: 50px;
        height: 50px;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .image-preview-small img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-overlay-small {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        color: white;
    }

    .image-preview-small:hover {
        transform: scale(1.1);
    }

    .image-preview-small:hover .image-overlay-small {
        opacity: 1;
    }

    /* Badges */
    .slug-badge, .no-image-badge, .date-badge {
        padding: 0.3rem 0.6rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .slug-badge {
        background: #edf2f7;
        color: #4a5568;
        font-family: monospace;
    }

    .no-image-badge {
        background: #fed7d7;
        color: #c53030;
    }

    .date-badge {
        background: #e6fffa;
        color: #234e52;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border: none;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

    .btn-edit {
        background: #e6f3ff;
        color: #3182ce;
    }

    .btn-edit:hover {
        background: #3182ce;
        color: white;
        transform: scale(1.1);
    }

    .btn-delete {
        background: #fed7d7;
        color: #e53e3e;
    }

    .btn-delete:hover {
        background: #e53e3e;
        color: white;
        transform: scale(1.1);
    }

    /* Premium Modal */
    .premium-modal {
        border-radius: 20px;
        border: none;
        box-shadow: var(--premium-shadow);
    }

    .modal-dialog-centered {
        min-height: calc(100% - 3.5rem);
    }

    .premium-modal-header {
        background: var(--primary-gradient);
        color: white;
        border-radius: 20px 20px 0 0;
        padding: 1.5rem 2rem;
        border: none;
    }

    .premium-modal-body {
        padding: 2rem;
    }

    .premium-modal-footer {
        border-radius: 0 0 20px 20px;
        padding: 1.5rem 2rem;
        border-top: 1px solid var(--premium-border);
    }

    /* Buttons */
    .btn-premium {
        background: var(--primary-gradient);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-premium:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-secondary {
        background: #e2e8f0;
        color: #4a5568;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: #cbd5e0;
    }

    .btn-danger {
        background: var(--danger-gradient);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(229, 62, 62, 0.3);
    }

    /* Form Styles */
    .form-group-premium {
        margin-bottom: 1.5rem;
    }

    .form-label-premium {
        display: flex;
        align-items: center;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .premium-input, .premium-textarea {
        width: 100%;
        padding: 1rem 1.2rem;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

    .premium-input:focus, .premium-textarea:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        outline: none;
    }

    .premium-textarea {
        resize: vertical;
        min-height: 120px;
    }

    /* File Input */
    .file-input-wrapper {
        position: relative;
    }

    .premium-file-input {
        display: none;
    }

    .file-input-label {
        display: block;
        padding: 1rem 1.5rem;
        background: var(--premium-bg);
        border: 2px dashed #cbd5e0;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .file-input-label:hover {
        border-color: #667eea;
        background: #f7fafc;
    }

    /* Preview Image */
    .preview-image {
        max-width: 100%;
        max-height: 70vh;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
</style>

<script>
    // Services data - safely handle undefined services
    const servicesData = {
        <% if (typeof services !== 'undefined') { %>
            <% services.forEach(service => { %>
                <%= service.id %>: {
                    title: `<%= service.title.replace(/'/g, "\\'") %>`,
                    slug: `<%= service.slug.replace(/'/g, "\\'") %>`,
                    description: `<%= service.description ? service.description.replace(/'/g, "\\'") : '' %>`,
                    image: "<%= service.image_url || '' %>"
                },
            <% }) %>
        <% } %>
    };

    // Edit Modal functionality
    function openEditModal(id) {
        const service = servicesData[id];
        if (!service) {
            alert('Service data not found!');
            return;
        }

        // Set form action
        document.getElementById('editForm').action = `/admin/services/${id}/edit`;
        
        // Fill form data
        document.getElementById('edit_id').value = id;
        document.getElementById('edit_title').value = service.title;
        document.getElementById('edit_slug').value = service.slug;
        document.getElementById('edit_description').value = service.description;

        // Show current image
        const previewContainer = document.getElementById('currentImagePreview');
        previewContainer.innerHTML = '';
        
        if (service.image) {
            const imgWrapper = document.createElement('div');
            imgWrapper.className = 'text-center';
            imgWrapper.innerHTML = `
                <p class="small text-muted mb-2">Current Image:</p>
                <img src="${service.image}" alt="Current Image" 
                     class="img-thumbnail" style="max-width: 200px; cursor: pointer;"
                     onclick="previewImage('${service.image}')">
            `;
            previewContainer.appendChild(imgWrapper);
        } else {
            previewContainer.innerHTML = '<p class="text-muted small">No image uploaded</p>';
        }

        // Show modal
        const editModal = new bootstrap.Modal(document.getElementById('editServiceModal'));
        editModal.show();
    }

    // Delete Confirmation
    function confirmDelete(id, title) {
        document.getElementById('deleteServiceName').textContent = title;
        document.getElementById('deleteForm').action = `/admin/services/${id}/delete`;
        
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
        deleteModal.show();
    }

    // Image preview function
    function previewImage(src) {
        document.getElementById('previewImage').src = src;
        const previewModal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
        previewModal.show();
    }

    // File input change handlers
    document.addEventListener('DOMContentLoaded', function() {
        // Add service modal file input
        const addImageInput = document.getElementById('addImage');
        if (addImageInput) {
            addImageInput.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
                    label.style.borderColor = '#48bb78';
                    label.style.background = '#f0fff4';
                }
            });
        }

        // Edit service modal file input
        const editImageInput = document.getElementById('editImage');
        if (editImageInput) {
            editImageInput.addEventListener('change', function() {
                const label = this.nextElementSibling;
                if (this.files.length > 0) {
                    label.innerHTML = `<i class="fas fa-check me-2"></i>${this.files[0].name}`;
                    label.style.borderColor = '#48bb78';
                    label.style.background = '#f0fff4';
                }
            });
        }

        // Auto-hide alerts after 5 seconds
        const alerts = document.querySelectorAll('.alert-premium-success, .alert-premium-error');
        alerts.forEach(alert => {
            setTimeout(() => {
                if (alert.parentNode) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 5000);
        });
    });
</script>

