<%- include('../layouts/admin_layouts_header', { title: 'Admin | Services', currentPage: 'services' }) %>
<%- include('../layouts/admin_layouts_sidebar', { currentPage: 'services' }) %>

<div class="container-fluid px-4 py-4">
    <!-- Premium Header -->
    <div class="premium-header mb-5">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 fw-bold text-gradient mb-2">Services Management</h1>
                <p class="text-muted mb-0">Manage your services portfolio with excellence</p>
            </div>
            <button class="btn-premium" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                <i class="fas fa-plus me-2"></i> Add New Service
            </button>
        </div>
    </div>

    <!-- Success/Error Messages -->
    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="alert-premium-success alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3"></i>
                <div class="fw-medium"><%= successMessage %></div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>
    
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert-premium-error alert-dismissible fade show mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-3"></i>
                <div class="fw-medium"><%= errorMessage %></div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    <% } %>

    <!-- Services Table Section -->
    <div class="premium-card">
        <div class="premium-card-header">
            <div class="d-flex align-items-center">
                <div class="premium-icon-small me-3">
                    <i class="fas fa-cogs"></i>
                </div>
                <div>
                    <h4 class="mb-1 fw-bold">Current Services</h4>
                    <p class="mb-0 text-muted"><%= typeof services !== 'undefined' ? services.length : 0 %> services available</p>
                </div>
            </div>
        </div>
        <div class="premium-card-body">
            <div class="table-responsive">
                <table class="table premium-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Slug</th>
                            <th>Image</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof services !== 'undefined' && services.length > 0) { %>
                            <% services.forEach((service, index) => { %>
                                <tr class="premium-table-row">
                                    <td class="text-center fw-bold"><%= index + 1 %></td>
                                    <td>
                                        <div class="service-title">
                                            <%- service.title %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="description-tooltip">
                                            <span class="description-preview">
                                                <%- service.description ? service.description.replace(/<[^>]*>/g, '').substring(0, 80) + '...' : 'No description' %>
                                            </span>
                                            <% if (service.description && service.description.length > 80) { %>
                                                <div class="tooltip-content">
                                                    <%- service.description.replace(/<[^>]*>/g, '') %>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <code class="slug-badge"><%- service.slug %></code>
                                    </td>
                                    <td>
                                        <% if (service.image_url) { %>
                                            <div class="image-preview-small" onclick="previewImage('<%= service.image_url %>')">
                                                <img src="<%= service.image_url %>" alt="<%- service.title %>">
                                                <div class="image-overlay-small">
                                                    <i class="fas fa-search-plus"></i>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <span class="no-image-badge">No image</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="date-badge">
                                            <%= new Date(service.created_at).toLocaleDateString() %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-action btn-edit" onclick="openEditModal(<%= service.id %>)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-action btn-delete" onclick="confirmDelete(<%= service.id %>, '<%- service.title.replace(/'/g, "\\'") %>')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="empty-state-table">
                                        <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                                        <h5>No Services Found</h5>
                                        <p class="text-muted">Add your first service to get started</p>
                                        <button class="btn-premium mt-3" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                                            <i class="fas fa-plus me-2"></i> Add Service
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content premium-modal">
            <form action="/admin/services" method="POST" enctype="multipart/form-data" id="addServiceForm">
                <div class="modal-header premium-modal-header">
                    <h5 class="modal-title" id="addServiceModalLabel">
                        <i class="fas fa-plus-circle me-2"></i>
                        Add New Service
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body premium-modal-body">
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-heading me-2"></i>
                            Title *
                        </label>
                        <input type="text" name="title" class="premium-input" placeholder="Enter service title" required>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-link me-2"></i>
                            Slug *
                        </label>
                        <input type="text" name="slug" class="premium-input" placeholder="service-slug" required>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-align-left me-2"></i>
                            Description
                        </label>
                        <textarea name="description" class="premium-textarea" rows="5" placeholder="Describe your service..."></textarea>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-image me-2"></i>
                            Service Image
                        </label>
                        <div class="file-input-wrapper">
                            <input type="file" name="image" class="premium-file-input" accept="image/*" id="addImage">
                            <label for="addImage" class="file-input-label">
                                <i class="fas fa-upload me-2"></i>
                                Choose Image File
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer premium-modal-footer">
                    <button type="submit" class="btn-premium">
                        <i class="fas fa-save me-2"></i> Add Service
                    </button>
                    <button type="button" class="btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content premium-modal">
            <form id="editForm" method="POST" enctype="multipart/form-data">
                <div class="modal-header premium-modal-header">
                    <h5 class="modal-title" id="editServiceModalLabel">
                        <i class="fas fa-edit me-2"></i>
                        Edit Service
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body premium-modal-body">
                    <input type="hidden" id="edit_id" name="id">
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-heading me-2"></i>
                            Title *
                        </label>
                        <input type="text" id="edit_title" name="title" class="premium-input" required>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-link me-2"></i>
                            Slug *
                        </label>
                        <input type="text" id="edit_slug" name="slug" class="premium-input" required>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-align-left me-2"></i>
                            Description
                        </label>
                        <textarea id="edit_description" name="description" class="premium-textarea" rows="5"></textarea>
                    </div>
                    
                    <div class="form-group-premium">
                        <label class="form-label-premium">
                            <i class="fas fa-image me-2"></i>
                            Update Image
                        </label>
                        <div class="file-input-wrapper">
                            <input type="file" name="image" class="premium-file-input" accept="image/*" id="editImage">
                            <label for="editImage" class="file-input-label">
                                <i class="fas fa-upload me-2"></i>
                                Choose New Image
                            </label>
                        </div>
                        <div id="currentImagePreview" class="current-image-preview mt-3"></div>
                    </div>
                </div>
                <div class="modal-footer premium-modal-footer">
                    <button type="submit" class="btn-premium">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                    <button type="button" class="btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content premium-modal">
            <div class="modal-header premium-modal-header">
                <h5 class="modal-title" id="deleteConfirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body premium-modal-body text-center">
                <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                <h5>Delete Service</h5>
                <p>Are you sure you want to delete "<span id="deleteServiceName" class="fw-bold"></span>"?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer premium-modal-footer justify-content-center">
                <form id="deleteForm" method="POST" class="d-inline">
                    <button type="submit" class="btn-danger">
                        <i class="fas fa-trash-alt me-2"></i> Delete
                    </button>
                </form>
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Image Preview Modal -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content premium-modal">
            <div class="modal-header premium-modal-header">
                <h5 class="modal-title" id="imagePreviewModalLabel">
                    <i class="fas fa-search me-2"></i>
                    Image Preview
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body premium-modal-body text-center">
                <img id="previewImage" src="" class="preview-image" alt="Preview">
            </div>
        </div>
    </div>
</div>

