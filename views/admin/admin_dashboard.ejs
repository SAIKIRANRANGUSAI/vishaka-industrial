                    flex-direction: column;
                    gap: 1rem;
                    align-items: flex-start;
                }

                .detail-item {
                    flex-direction: column;
                    gap: 0.5rem;
                }

                .detail-item label {
                    width: 100%;
                }
            }

            @media (max-width: 576px) {
                .stat-card {
                    flex-direction: column;
                    text-align: center;
                    gap: 1rem;
                }

                .stat-icon {
                    margin-right: 0;
                }

                .user-info {
                    flex-direction: column;
                    text-align: center;
                    gap: 0.5rem;
                }

                .action-buttons {
                    flex-direction: column;
                    gap: 0.25rem;
                }
            }
        </style>
