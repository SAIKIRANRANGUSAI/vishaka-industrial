<%- include('../layouts/admin_layouts_header', { title: 'Admin | Dashboard' , currentPage: 'dashboard' }) %>
    <%- include('../layouts/admin_layouts_sidebar', { currentPage: 'dashboard' }) %>

        <div class="main-content">
            <div class="content">
                <!-- Dashboard Header -->
                <div class="dashboard-header">
                    <div class="header-content">
                        <h1 class="page-title">Dashboard Overview</h1>
                        <p class="page-subtitle">Monitor contact messages</p>
                    </div>
                    <div class="header-actions">
                        <div class="date-display">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <span id="currentDateTime">Loading...</span>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon primary">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="stat-content">
                            <h3>
                                <%= contactStats.totalMessages %>
                            </h3>
                            <p>Total Messages</p>
                            <div class="stat-trend up">
                                <i class="fas fa-arrow-up"></i>
                                <span>12% increase</span>
                            </div>
                        </div>
                    </div>
                    <!-- <div class="stat-card">
                        <div class="stat-icon success">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-content">
                            <h3>
                                <%= alumniStats.totalAlumni %>
                            </h3>
                            <p>Alumni Registrations</p>
                            <div class="stat-trend up">
                                <i class="fas fa-arrow-up"></i>
                                <span>8% increase</span>
                            </div>
                        </div>
                    </div> -->
                </div>

                <!-- Contact Messages Table -->
                <div class="content-section">
                    <div class="section-header">
                        <div class="section-title-container">
                            <div class="section-icon"><i class="fas fa-envelope"></i></div>
                            <div>
                                <h2 class="section-title">Contact Messages</h2>
                                <p class="section-subtitle">Manage incoming contact form submissions</p>
                            </div>
                        </div>
                        <div class="section-actions">
                            <span class="badge badge-primary">
                                <%= contactMessages.length %> Messages
                            </span>
                        </div>
                    </div>

                    <% if (contactMessages.length> 0) { %>
                        <div class="table-container">
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th width="60">ID</th>
                                        <th>Sender</th>
                                        <th>Contact Info</th>
                                        <th>Subject</th>
                                        <th width="140">Date & Time</th>
                                        <th width="120">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% contactMessages.forEach((msg, idx)=> { %>
                                        <tr>
                                            <td class="text-center">
                                                <%= idx + 1 %>
                                            </td>
                                            <td>
                                                <div class="user-info">
                                                    <div class="user-avatar">
                                                        <%= msg.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <div class="user-details">
                                                        <div class="user-name">
                                                            <%= msg.name %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="contact-info">
                                                    <div class="contact-email">
                                                        <i class="fas fa-envelope me-1"></i>
                                                        <a href="mailto:<%= msg.email %>">
                                                            <%= msg.email %>
                                                        </a>
                                                    </div>
                                                    <div class="contact-phone">
                                                        <i class="fas fa-phone me-1"></i>
                                                        <%= msg.phone || 'N/A' %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="subject-cell">
                                                    <span class="subject-text">
                                                        <%= msg.subject || 'No Subject' %>
                                                    </span>
                                                    <% if (msg.message && msg.message.length> 30) { %>
                                                        <div class="message-preview">
                                                            <%= msg.message.substring(0, 30) %>...
                                                        </div>
                                                        <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="datetime-cell">
                                                    <div class="date-text">
                                                        <%= new Date(msg.created_at).toLocaleDateString() %>
                                                    </div>
                                                    <div class="time-text">
                                                        <%= new Date(msg.created_at).toLocaleTimeString([],
                                                            {hour:'2-digit', minute:'2-digit'}) %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button onclick="viewMessage(<%= msg.id %>)" class="btn-action view"
                                                        data-bs-toggle="tooltip" title="View Message">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button
                                                        onclick="deleteContactMessage(<%= msg.id %>, '<%= msg.name %>')"
                                                        class="btn-action delete" data-bs-toggle="tooltip"
                                                        title="Delete Message">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (contactTotalPages> 1) { %>
                            <div class="pagination-container">
                                <div class="pagination-info">
                                    Showing <%= Math.min(contactPerPage, contactMessages.length) %> of <%=
                                            contactStats.totalMessages %> messages
                                </div>
                                <nav class="pagination-nav">
                                    <ul class="pagination">
                                        <li class="page-item <%= contactCurrentPage === 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="?contactPage=<%= contactCurrentPage - 1 %>">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        </li>
                                        <% for (let p=1; p <=contactTotalPages; p++) { %>
                                            <li class="page-item <%= contactCurrentPage === p ? 'active' : '' %>">
                                                <a class="page-link" href="?contactPage=<%= p %>">
                                                    <%= p %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <li
                                                    class="page-item <%= contactCurrentPage === contactTotalPages ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="?contactPage=<%= contactCurrentPage + 1 %>">
                                                        <i class="fas fa-chevron-right"></i>
                                                    </a>
                                                </li>
                                    </ul>
                                </nav>
                            </div>
                            <% } %>

                                <% } else { %>
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="fas fa-envelope-open"></i>
                                        </div>
                                        <h5>No Contact Messages</h5>
                                        <p>No contact messages have been received yet.</p>
                                    </div>
                                    <% } %>
                </div>
            </div>
        </div>

        <!-- View Message Modal -->
        <div class="modal fade" id="viewMessageModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Contact Message Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="messageDetails">
                        <!-- Message details will be loaded here -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Update current date and time
            function updateDateTime() {
                const now = new Date();
                const options = {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                };
                document.getElementById('currentDateTime').textContent = now.toLocaleDateString('en-US', options);
            }

            // Initialize date time and update every minute
            updateDateTime();
            setInterval(updateDateTime, 60000);

            // Tooltip initialization
            document.addEventListener('DOMContentLoaded', function () {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(el => new bootstrap.Tooltip(el));
            });

            // View Message in modal
            function viewMessage(id) {
    const messages = <%- JSON.stringify(contactMessages) %>;  // Embed data as JSON
    const message = messages.find(msg => msg.id === id);
    if (!message) {
        alert('Message not found');
        return;
    }

    const detailsHtml = `
      <div class="modal-details">
        <div class="detail-item">
          <label>From:</label>
          <div class="detail-value">
            <strong>${message.name}</strong> 
            <div class="contact-links">
              <a href="mailto:${message.email}">${message.email}</a>
              ${message.phone ? ` | <a href="tel:${message.phone}">${message.phone}</a>` : ''}
            </div>
          </div>
        </div>
        <div class="detail-item">
          <label>Date & Time:</label>
          <div class="detail-value">${new Date(message.created_at).toLocaleString()}</div>
        </div>
        <div class="detail-item">
          <label>Subject:</label>
          <div class="detail-value">${message.subject || 'No Subject'}</div>
        </div>
        <div class="detail-item full-width">
          <label>Message:</label>
          <div class="message-content">${message.message.replace(/\n/g, '<br>')}</div>
        </div>
      </div>
    `;

    document.getElementById('messageDetails').innerHTML = detailsHtml;
    new bootstrap.Modal(document.getElementById('viewMessageModal')).show();
}


            // Delete message via AJAX
            async function deleteContactMessage(id, name) {
                if (!confirm(`Are you sure you want to delete the message from ${name}?`)) return;

                try {
                    const res = await fetch(`/admin/contact/${id}`, {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    const data = await res.json();
                    if (data.success) {
                        alert('Message deleted successfully!');
                        location.reload(); // Reload page to update table
                    } else {
                        alert('Failed to delete message.');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Server error.');
                }
            }
        </script>

