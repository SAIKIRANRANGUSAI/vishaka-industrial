                    <!-- Main Section -->
                    <div class="col-12">
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-info-circle me-2"></i>Main Section</h5>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Title *</label>
                        <input type="text" class="form-control premium-input" name="title" 
                               value="<%= sectionData.title || '' %>" placeholder="Who We Are" required>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Sub Title</label>
                        <input type="text" class="form-control premium-input" name="sub_title" 
                               value="<%= sectionData.sub_title || '' %>" placeholder="About Our Company">
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label fw-semibold">Description *</label>
                       <textarea id="description" name="description" rows="5" required><%= sectionData.description || '' %></textarea>
                    </div>

                    <!-- Images Section -->
                    <div class="col-12 mt-4">
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-images me-2"></i>Section Images</h5>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Image 1</label>
                        <input type="file" class="form-control premium-input" name="image1" 
                               accept="image/*" onchange="previewImage(this, 'preview1')">
                        <div class="image-preview mt-3" id="preview1">
                            <% if (sectionData.image1) { %>
                                <img src="<%= sectionData.image1 %>" alt="Current Image 1" class="preview-thumbnail">
                                <small class="text-muted d-block mt-2">Current Image</small>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-image fa-2x mb-2"></i>
                                    <p class="mb-0">No image selected</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Image 2</label>
                        <input type="file" class="form-control premium-input" name="image2" 
                               accept="image/*" onchange="previewImage(this, 'preview2')">
                        <div class="image-preview mt-3" id="preview2">
                            <% if (sectionData.image2) { %>
                                <img src="<%= sectionData.image2 %>" alt="Current Image 2" class="preview-thumbnail">
                                <small class="text-muted d-block mt-2">Current Image</small>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-image fa-2x mb-2"></i>
                                    <p class="mb-0">No image selected</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Image 3</label>
                        <input type="file" class="form-control premium-input" name="image3" 
                               accept="image/*" onchange="previewImage(this, 'preview3')">
                        <div class="image-preview mt-3" id="preview3">
                            <% if (sectionData.image3) { %>
                                <img src="<%= sectionData.image3 %>" alt="Current Image 3" class="preview-thumbnail">
                                <small class="text-muted d-block mt-2">Current Image</small>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-image fa-2x mb-2"></i>
                                    <p class="mb-0">No image selected</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Custom Solutions Section -->
                    <div class="col-12 mt-4">
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-cogs me-2"></i>Custom Solutions</h5>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Custom Heading</label>
                        <input type="text" class="form-control premium-input" name="custom_heading" 
                               value="<%= sectionData.custom_heading || '' %>" placeholder="Custom Solutions">
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Custom Description</label>
                        <textarea id="custom_description" name="custom_description" rows="3"><%= sectionData.custom_description || '' %></textarea>
                    </div>

                    <!-- Technical Excellence Section -->
                    <div class="col-12 mt-4">
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-award me-2"></i>Technical Excellence</h5>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Technical Heading</label>
                        <input type="text" class="form-control premium-input" name="technical_heading" 
                               value="<%= sectionData.technical_heading || '' %>" placeholder="Technical Excellence">
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-semibold">Technical Description</label>
                        <textarea id="technical_description" name="technical_description" rows="3"><%= sectionData.technical_description || '' %></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn-premium">
                            <i class="fas fa-save me-2"></i>Update Who We Are Section
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

