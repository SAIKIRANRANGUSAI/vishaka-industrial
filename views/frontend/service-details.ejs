<%- include('partials/header') %>

<div class="breadcumb-wrapper" data-bg-src="/images/breadcrumb-img-1.jpg">
  <div class="container">
    <div class="breadcumb-content">
      <h1 class="breadcumb-title">Services</h1>
      <ul class="breadcumb-menu">
        <li><a href="/">Home</a></li>
        <li>Services</li>
      </ul>
    </div>
  </div>
</div>

<section class="space py-5">
  <div class="container">
    <% services.forEach((service, index) => { %>
      <div id="<%= service.slug %>" class="row mb-5 align-items-center service-section">
        
        <% if (index % 2 === 0) { %>
          <div class="col-md-8 order-2 order-md-1">
            <h6 class="fw-bold"><%= service.title %></h6>
            <p><%= service.description %></p>
          </div>
          <div class="col-md-4 order-1 order-md-2">
            <img src="<%= service.image_url %>" alt="<%= service.title %>" class="img-fluid rounded shadow">
          </div>
        <% } else { %>
          <div class="col-md-4 order-1 order-md-1">
            <img src="<%= service.image_url %>" alt="<%= service.title %>" class="img-fluid rounded shadow">
          </div>
          <div class="col-md-8 order-2 order-md-2">
            <h6 class="fw-bold"><%= service.title %></h6>
            <p><%= service.description %></p>
          </div>
        <% } %>

      </div>
    <% }) %>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hash = window.location.hash;

    if (hash) {
      const el = document.querySelector(hash);
      if (el) {
        // Get fixed header height
        const headerHeight = document.querySelector('header')?.offsetHeight || 0;

        // Extra top margin (you can adjust, e.g., 50px)
        const topMargin = 50;

        // Scroll with offset
        const elementPosition = el.getBoundingClientRect().top + window.pageYOffset - headerHeight - topMargin;
        window.scrollTo({ top: elementPosition, behavior: "smooth" });

        // Highlight section temporarily
        el.classList.add("highlight-section");
        setTimeout(() => el.classList.remove("highlight-section"), 3000);
      }
    }
  });
</script>


<style>
  /* Highlight effect for smooth attention */
  .highlight-section {
    border: 2px solid #ff6600;
    padding: 1rem;
    border-radius: 6px;
    transition: all 0.5s ease;
    background-color: #fff8e1;
  }
</style>

