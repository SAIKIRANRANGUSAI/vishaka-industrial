  <!-- Pagination -->
  <div class="pagination mt-4 text-center">
    <% for (let i=1; i <= totalPages; i++) { %>
      <button class="th-btn style4 page-btn <%= currentPage == i ? 'active' : '' %>" data-page="<%= i %>">
        <%= i %>
      </button>
    <% } %>
  </div>
