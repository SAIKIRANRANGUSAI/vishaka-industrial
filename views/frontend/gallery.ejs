<%- include('partials/header') %>

<div class="breadcumb-wrapper" data-bg-src="/images/breadcrumb-img-1.jpg">
  <div class="container">
    <div class="breadcumb-content">
      <h1 class="breadcumb-title">Gallery</h1>
      <ul class="breadcumb-menu">
        <li><a href="/">Home</a></li>
        <li>Gallery</li>
      </ul>
    </div>
  </div>
</div>

<div class="case-area space">
  <div class="container">
    <div class="row gy-4">
      <% if (images && images.length > 0) { %>
        <% images.forEach(image => { %>
          <div class="col-lg-4 filter-item">
            <div class="case-box style2 inner-style1">
              <div class="case-img global-img">
                <img src="<%= image.image_url %>" alt="gallery image" />
                <a href="<%= image.image_url %>" class="icon-btn popup-image">
                  <i class="fa-light fa-arrow-right-long"></i>
                </a>
              </div>
              <div class="case-action">
                <a href="#!" class="case-btn">
                  <i class="fa-light fa-arrow-right-long"></i>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <h5 class="text-muted">No images found in the gallery.</h5>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
